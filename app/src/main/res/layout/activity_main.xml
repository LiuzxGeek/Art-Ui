<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#F1F3F2"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/main_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#33F265B8"
        android:gravity="right">

        <ImageView
            android:id="@+id/main_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:src="@mipmap/icon_logo" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_photo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/icon_camera_pink"
            android:gravity="center"
            android:text="拍照"
            android:textColor="#F265B8"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_album"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/icon_album_pink"
            android:gravity="center"
            android:text="相册"
            android:textColor="#F265B8"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_beauty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/icon_beauty_pink"
            android:gravity="center"
            android:text="美图"
            android:textColor="#F265B8"
            android:textStyle="bold"
            android:visibility="visible" />
    </LinearLayout>

</LinearLayout>